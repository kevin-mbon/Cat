@page
@model CatWeb.Pages.Cats.CreateModel

<form method="post">
    <div class="border p3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Add Cat</h2>
        </div>
        <div class="mb-3">
            Name: 
            <label asp-for="Cat.Name"></label>
            <input asp-for="Cat.Name" class="form-control" />
        </div>
        <div class="mb-3">
            Color:
            <label asp-for="Cat.Name"></label>
            <input asp-for="Cat.Color" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Add</button>
    </div>
</form>
