@page
@model CatWeb.Pages.Cats.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cats List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">Add new Cat</a>

        </div>
    </div>
    <br />  <br />
    <table class="table table-bordered table-striped" style="width : 100%">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Cats)
            {
                <tr>
                    <td width="30%"> @obj.Name  </td>
                    <td width="50%"> @obj.Color </td>
                </tr>
            }
           
        </tbody>
    </table>
</div>
