@page
@model CatWeb.Pages.Cats.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 text-end">
            <h2 class="text-primary">Cats List</h2>
        </div>
        <div class="col-6"> 
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;
                Add new Cat</a>

        </div>
    </div>
    <br />  <br />
    <table class="table table-bordered table-striped" style="width : 100%">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Cats)
            {
                <tr>
                    <td width="30%"> @obj.Name  </td>
                    <td width="50%"> @obj.Color </td>
                    <td >
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx -2">
                                <i class="bi bi-pencil-square"></i> &nbsp;
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> &nbsp;
                            </a>
                        </div>
                    </td>
                </tr>
            }
           
        </tbody>
    </table>
</div>
